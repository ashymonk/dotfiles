[core]
	quotePath = false
	editor = vim -c \"set fenc=utf-8\"
	pager = LESSCHARSET=utf-8 less -x4

[credential]
	helper = cache

[alias]
	alias = config --get-regexp alias.*
	st = status
	sts = status -s
	d = diff
	dw = diff --color-words
	dc = diff --cached
	dcw = diff --cached --color-words
	b = branch
	bv = branch -v
	bvv = branch -vv
	bm = branch --move
	bd = branch --delete
	bD = branch --delete --force
	ba = branch --all
	co = checkout
	cot = checkout --track
	cop = checkout --patch
	a = add
	ap = add --patch
	ai = add --interactive
	ci = commit
	cia = commit --amend
	cip = commit --patch
	rs = reset
	rss = reset --soft
	rsh = reset --hard
	rsk = reset --keep
	rb = rebase
	rbi = rebase --interactive
	rbc = rebase --continue
	rba = rebase --abort
	l = log
	ln = log --name-only
	lp = log -p
	lpw = log -p --color-words
	la = log --remotes --branches
	lg = -c \"core.pager=LESSCHARSET=utf-8 less -Sx4\" log --graph --oneline --format=\"%C(green)%h%C(reset) [%<(12,trunc)%aN] [%<(12,trunc)%cN] %s %C(bold red)%d%C(reset)\"
	rmt = remote
	rmtv = remote -v
	rmtvv = remote -vv
	rmtadd = remote add
	rmtrem = remote remove
	rmtset = remote set-url
	rmtren = remote rename
	cf = config
	cfs = config --system
	cfg = config --global
	cfl = config --local

[log]
	decorate = true

[diff "cp932"]
	textconv = iconv -f cp932 -t utf-8

[diff "sjis"]
	textconv = iconv -f sjis -t utf-8

[ghq]
	root = ~/src

[include]
	path = ~/.config/git/config.local
