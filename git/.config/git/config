[core]
	excludesfile = ~/.gitignore
	editor = vim -c \"set fenc=utf-8\"

[alias]
	st = status
	d = diff
	dw = diff --color-words
	dc = diff --cached
	dcw = diff --cached --color-words
	b = branch
	bv = branch -v
	bvv = branch -vv
	ba = branch --all
	co = checkout
	cop = checkout --patch
	a = add
	ap = add --patch
	ci = commit
	cia = commit --amend
	cip = commit --patch
	rb = rebase
	rbi = rebase --interactive
	rbc = rebase --continue
	rba = rebase --abort
	l = log
	ln = log --name-only
	lp = log -p
	lpw = log -p --color-words
	la = log --remotes --branches
	lg = log --graph --oneline --format=\"%h [%<(12,trunc)%aN] [%<(12,trunc)%cN] %<(50,trunc)%s\"

[log]
	decorate = true

[ghq]
	root = ~/src

[include]
	path = ~/.config/git/config.local
