[core]
	excludesfile = ~/.gitignore
	quotePath = false
	editor = vim -c \"set fenc=utf-8\"
	pager = LESSCHARSET=utf-8 less -Sx4

[alias]
	st = status
	d = diff
	dw = diff --color-words
	dc = diff --cached
	dcw = diff --cached --color-words
	b = branch
	bv = branch -v
	bvv = branch -vv
	ba = branch --all
	co = checkout
	cop = checkout --patch
	a = add
	ap = add --patch
	ci = commit
	cia = commit --amend
	cip = commit --patch
	rb = rebase
	rbi = rebase --interactive
	rbc = rebase --continue
	rba = rebase --abort
	l = log
	ln = log --name-only
	lp = log -p
	lpw = log -p --color-words
	la = log --remotes --branches
	lg = log --graph --oneline --format=\"%C(green)%h%C(reset) [%<(12,trunc)%aN] [%<(12,trunc)%cN] %s %C(bold red)%d%C(reset)\"

[log]
	decorate = true

[diff "cp932"]
	textconv = iconv -f cp932 -t utf-8

[diff "sjis"]
	textconv = iconv -f sjis -t utf-8

[ghq]
	root = ~/src

[include]
	path = ~/.config/git/config.local
