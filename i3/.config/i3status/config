# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#00FF00"
        color_degraded = "#FFFF00"
        color_bad = "#FF0000"
        interval = 5
        output_format = i3bar
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "disk /"
order += "disk /home"
order += "disk /var"
order += "disk /var/log"
order += "load"
order += "memory"
order += "battery all"
order += "volume master"
order += "tztime local"

ipv6 {
        format_up = "IPv6: %ip"
        format_down = ""
}

wireless _first_ {
        format_up = " %essid (%ip)"
        format_down = " down"
}

ethernet _first_ {
        format_up = "󰈀 %interface (%ip)"
        format_down = "󰈀 down"
}

disk "/" {
        format = ""
        format_below_threshold = "󰿠 <%avail"
        threshold_type = "percentage_avail"
        low_threshold = 10
}

disk "/home" {
        format = ""
        format_below_threshold = "󱂵 <%avail"
        threshold_type = "percentage_avail"
        low_threshold = 10
}

disk "/var" {
        format = ""
        format_below_threshold = "󰆼 <%avail"
        threshold_type = "percentage_avail"
        low_threshold = 10
}

disk "/var/log" {
        format = ""
        format_below_threshold = " <%avail"
        threshold_type = "percentage_avail"
        low_threshold = 10
}

load {
        format = "󰓅 %1min"
        max_threshold = 5
}

memory {
        format = " %used / %total"
        format_degraded = " %used / %total"
        threshold_degraded = "20%"
        threshold_critical = "10%"
}

battery all {
        format = "%status %percentage (%emptytime)"
        format_down = ""
        status_chr = "󰂄"
        status_bat = "󰂌"
        status_unk = "󰂃"
        status_full = "󱈑"
        threshold_type = "percentage"
        low_threshold = 20
        integer_battery_capacity = true
}

volume master {
        format = "󰕾 %volume"
        format_muted = "󰝟 %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
