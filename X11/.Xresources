!! ~/.Xresources

!!
!! common
!!

!! colorscheme
#include ".config/X11/xcolors-tango.Xresources"

!!
!! rxvt-unicode
!!

!! basic
URxvt.geometry:             96x32
URxvt.scrollBar_right:      true
URxvt.scrollBar_floating:   true
URxvt.scrollstyle:          plain
URxvt.cursorBlink:          true
URxvt.cursorUnderline:      false
URxvt.pointerBlank:         true
URxvt.visualBell:           false
URxvt.saveLines:            3000
URxvt.cutchars: "\\`\"'&()*,;<=>?@[]^{|}#$%+!:"
URxvt.inheritPixmap: true
URxvt.transparent: true
URxvt.shading: 15
URxvt.iconFile: HOME_DIR/.icons/urxvt_48x48.xpm

!! scroll back
URxvt.scrollTtyOutput: false
URxvt.scrollWithBuffer: true
URxvt.scrollTtyKeypress: true
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0

!! Font list and Spacing
URxvt.font: xft:Inconsolata:size=10:antialias=true,xft:Noto Sans Mono CJK JP:size=10:antialias=true
URxvt.letterSpace: 0
URxvt.lineSpace: 0

URxvt.iso14755: true
URxvt.iso14755_52: false

URxvt.resize-font.step: 1

!! perl extension
URxvt.perl-ext-common: default,selection-to-clipboard,confirm-paste,keyboard-select,-searchable-scrollback,resize-font

!! keybind
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search

URxvt.keysym.C-minus:    resize-font:smaller
URxvt.keysym.C-plus:     resize-font:bigger
URxvt.keysym.C-equal:    resize-font:reset
URxvt.keysym.C-question: resize-font:show
