!! ~/.Xresources

!!
!! common
!!

!! colorscheme
#include ".config/X11/xcolors-tango.Xresources"

!!
!! rxvt-unicode
!!

!! basic
URxvt.geometry:             96x32
URxvt.scrollBar_right:      true
URxvt.scrollBar_floating:   true
URxvt.scrollstyle:          plain
URxvt.cursorBlink:          true
URxvt.cursorUnderline:      false
URxvt.pointerBlank:         true
URxvt.visualBell:           false
URxvt.saveLines:            3000
URxvt.cutchars: "\\`\"'&()*,;<=>?@[]^{|}#$%+!:"
URxvt.transparent: true
URxvt.shading: 20

!! scroll back
URxvt.scrollTtyOutput: false
URxvt.scrollWithBuffer: true
URxvt.scrollTtyKeypress: true
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 1

!! Font list and Spacing
URxvt.font: xft:Ricty Diminished:size=10:antialias=true
URxvt.letterSpace: -1
URxvt.lineSpace: 0

!! perl extension
URxvt.perl-ext-common: default,selection-to-clipboard,confirm-paste,keyboard-select

!! keybind
URxvt.searchable-scrollback:
URxvt.keysym.M-s: perl:keyboard-select:activate
URxvt.keysym.M-S: perl:keyboard-select:search
